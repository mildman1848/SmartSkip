<settings>
    <!-- Allgemeine Einstellungen -->
    <category label="30000">

        <!-- Skip-Optionen: Ein-/Ausschalten bestimmter Segmente -->
        <setting id="enable_intro_skip" type="bool" default="true" label="30001" />
        <setting id="enable_recap_skip" type="bool" default="true" label="30002" />
        <setting id="enable_outro_skip" type="bool" default="true" label="30003" />
        <setting id="enable_preview_skip" type="bool" default="true" label="30004" />
        <setting id="enable_credits_skip" type="bool" default="true" label="30005" />

        <!-- Moduswahl: Automatisch oder manuell überspringen -->
        <setting id="skip_mode" type="enum" values="Automatic|Manual" default="0" label="30006" />

        <!-- Erkennungsmodus: einfache oder vollständige Erkennung durch intro-skipper -->
        <setting id="edl_mode" type="enum" values="Basic Detection|Full intro-skipper" default="1" label="30007" />

        <!-- Debug-Logging aktivieren zur Fehleranalyse -->
        <setting id="enable_debug_logging" type="bool" default="false" label="32010" />
    </category>
</settings>
